{
  "name": "authserver",
  "version": "1.0.0",
  "description": "Authentication server with JWT, rate limiting, and OAuth support",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.js",
    "dev": "bun --watch src/index.js",
    "test": "bun test",
    "build": "bun build src/index.js --outdir=dist --target=node",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:seed": "bun run prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "bun-types": "^1.0.18",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "authentication",
    "jwt",
    "auth",
    "api",
    "security",
    "bun"
  ],
  "author": "Mythsoul / moon ",
  "license": "MIT"
}
